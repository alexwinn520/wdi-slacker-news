<div class="modal show col-md-6" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
	  <div class="modal-content">
	    <div class="modal-header">
	      <h4 class="modal-title">Sign In</h4>
	    </div>
		  <div class="modal-body" id="modal1">
			<%= form_for :user do |f| %>
			    email: <%= f.text_field :email, placeholder: "Enter email" %> <br>
			    password: <%= f.password_field :password, placeholder: "Enter password" %> <br>
			    <%= f.submit "login" %>
		 	<% end %>
