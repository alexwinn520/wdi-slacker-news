<div class="modal show col-md-6 col-md-offset-6" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
	  <div class="modal-content">
	    <div class="modal-header">
	      <h4 class="modal-title">New User</h4>
	    </div>
		  <div class="modal-body raptor" id="modal2">
			<h4>Create Account</h4>

			<%= form_for :user, url: "/users" do |f| %>
			    username: <%= f.text_field :name %> <br>
			    email: <%= f.text_field :email %> <br>
			    password: <%= f.password_field :password %> <br>
			    <%= f.submit "create account" %>
			<% end %>
		  </div>
	  </div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
